<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>description</th>
      <th>election_id</th>
    </tr>
  </thead>
  <tbody>
    <% @positions.each do |pos| %>
      <tr>
        <td><%=pos.title%></td>
        <td><%=pos.description%></td>
        <td><%= pluralize(position.votes.count, "vote") %></td>
        <td><%= button_to '+1', upvote_position_path(position), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Position', new_position_path %>
